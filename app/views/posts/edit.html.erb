<div class=container>
  <h3>スケジュールを編集</h3>
  <%= form_with model: @post do |f| %>
    <table>
      <tr>
        <th><%= f.label :title ,"タイトル" %></th>
        <td><%= f.text_field :title %></td>
      </tr>

      <tr>
        <th><%= f.label :start ,"開始日" %></th>
        <td><%= f.date_field :start, min: Date.current %></td>
      </tr>

      <tr>
        <th><%= f.label :end ,"終了日" %></th>
        <td><%= f.date_field :end, min: Date.current %></td>
      </tr>

      <tr>
        <th><%= f.label :all_day ,"終日" %></th>
        <td><%= f.check_box :all_day %></td>
      </tr>

      <tr>
        <th><%= f.label :memo ,"スケジュールメモ" %></th>
        <td><%= f.text_area :memo %></td>
      </tr>
    </table>

    <div>
      <ul>
        <li><%= f.submit "編集を完了する" %></li>
        <li><%= link_to "スケジュール一覧に戻る", :posts %></li>
      </ul>
    </div>
  <% end %>
</div>